{
    "version": 2,
    "builds": [
        {
            "src": "*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
          "src": "/api/(.*)",
          "dest": "/backend/index.js"
        },
        {
          "src": "/(.*)",
          "dest": "/backend/index.js"
        }
      ] , 
    "env": {
        "MONGODB_URI": "mongodb://127.0.0.1:27017/Afghan-Wheels"
    }
}